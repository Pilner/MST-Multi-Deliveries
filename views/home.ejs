  <body>

    <%- include("partials/navbar", {page: "main"}) %>


    <section id="heroPage">
      <div class="containerA">
        <div>
          <div class="left">
            <div>
              <p class="display-2">Know your numbers,<br>optimize your deliveries.
              </p>
              <p class="h1">We offer an innovative map application to help businesses find the maximum number of vehicles needed for multiple deliveries, giving them an upper bound on how many vehicles they need to serve all their customers.
              </p>
            </div>
          </div>
          <div class="right">
            <img src="/pictures/hero-pic.png" alt="">
          </div>
        </div>
        <a href="#inputPage" class="buttonA">Start</a>
      </div>
    </section>

    <section id="inputPage">
      <div class="containerA">
        <div>
          <p class="display-2 text-center">Input Locations</p>
          <div class="inputForms">
            <div class="left">
              <form id="inputForm" method="GET" action="/getData">
                <div class="whInput">
                  <label for="warehouse">Warehouse</label>
                  <div>
                    <input type="text" id="warehouse" name="warehouse" placeholder="Warehouse Address Coordinates" readonly required >
                    <%- include("partials/redMarker") %>
                  </div>
                </div>
                <div class="dlInput">
                  <label for="delivery">Delivery Locations</label>
                  <%- include("partials/deliveryInput", {index: 1}) %>
                  <%- include("partials/deliveryInput", {index: 2}) %>
                </div>
                <div class="submitDiv">
                  <button class="buttonA" id="addButton" type="button">Add</button>
                  <button class="buttonA" type="submit">Generate</button>
                </div>
              </form>
            </div>
            <div class="right">
              <div class="map">
                <div id='inputMap'></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

  </body>
